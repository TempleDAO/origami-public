    "@morpho-org/morpho-blue-irm": "link:./lib/morpho-org/morpho-blue-irm",
    "@morpho-org/morpho-blue-oracles": "link:./lib/morpho-org/morpho-blue-oracles",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
