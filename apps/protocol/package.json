    "@openzeppelin/contracts": "4.9.3",
    "@openzeppelin/contracts-upgradeable": "4.9.3",
    "@openzeppelin/hardhat-upgrades": "1.28.0",
    "@pendle/core-v2": "^4.7.2",
    "@prb/math": "4.0.1",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^9.1.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "@uniswap/v2-core": "^1.0.1",
    "axios": "^1.2.2",
    "chai": "^4.3.7",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eth-gas-reporter": "^0.2.25",
    "ethers": "^5.7.2",
    "hardhat": "2.17.1",
    "hardhat-contract-sizer": "2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.8.2",
    "prettier-plugin-solidity": "^1.1.1",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4",
    "uuid": "^9.0.0"
  },
  "scripts": {
    "prepare": "cp ./lib/morpho-org/morpho-blue-irm/package.json ./lib/morpho-org/morpho-blue-oracles/",
    "compile": "hardhat compile",
    "typechain": "hardhat typechain",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "slither": "slither $PWD --triage-mode --foundry-out-directory ./artifacts-foundry --hardhat-cache-directory ./cache-hardhat --hardhat-artifacts-directory ./artifacts-hardhat",
    "slither-check": "slither $PWD --foundry-out-directory ./artifacts-foundry --hardhat-cache-directory ./cache-hardhat --hardhat-artifacts-directory ./artifacts-hardhat",
    "local-node": "hardhat node",
    "hardhat:local": "hardhat --network localhost",
    "hardhat:arbitrum": "hardhat --network arbitrum",
    "hardhat:avalanche": "hardhat --network avalanche",
    "local-fork:arbitrum": "hardhat node --fork https://arb-mainnet.g.alchemy.com/v2/Wpi5oKPY2NTrKdxCVlcqK3JrijSLHI7B --fork-block-number 60385740",
    "local-fork:deploy:gmx": "$PWD/scripts/deploys/localhost/gmx/deploy-localhost-fork.sh",
    "local-fork:test:gmx": "hardhat run --network localhost scripts/deploys/localhost/gmx/999-localhost-fork-test.ts",
    "local-fork:mainnet": "hardhat node --fork https://eth-mainnet.g.alchemy.com/v2/AorwfDdHDsEjIX4HPwS70zkVjWqjv5vZ --fork-block-number 17625800",
    "forge-test": "forge test",
    "forge-coverage": "forge coverage --offline --no-match-path \"test/foundry/invariant/**/*\" --no-match-test \"fuzz\"",
    "forge-coverage-html-1": "forge coverage --offline --no-match-path \"test/foundry/invariant/**/*\" --no-match-test \"fuzz\" --report summary --report lcov",
    "forge-coverage-html-2": "lcov --remove lcov.info 'contracts/investments/gmx/*' 'contracts/test/*' 'test/*' 'script/*' 'node_modules/*' 'contracts/external/*' --output-file lcov.info --rc branch_coverage=1 --rc derive_function_end_line=0 --ignore-errors unused",
    "forge-coverage-html-3": "genhtml lcov.info -o report --branch-coverage --rc branch_coverage=1 --rc derive_function_end_line=0 --legend --ignore-errors inconsistent --ignore-errors category",
    "forge-coverage-html": "yarn forge-coverage-html-1 && yarn forge-coverage-html-2 && yarn forge-coverage-html-3",
    "forge-invariant:lite": "export FOUNDRY_FUZZ_SEED=$(date +%s) && echo \"USING SEED: $FOUNDRY_FUZZ_SEED\" && FOUNDRY_PROFILE=lite forge test --match-path \"test/foundry/invariant/**/*.sol\"",
    "forge-invariant:untilfail": "export FOUNDRY_FUZZ_SEED=$(date +%s) && echo \"USING SEED: $FOUNDRY_FUZZ_SEED\" && FOUNDRY_INVARIANT_DEPTH=90 FOUNDRY_INVARIANT_RUNS=500 FOUNDRY_PROFILE=lite ././scripts/untilfail forge test --match-path \"test/foundry/invariant/**/*.sol\"",
    "legacy-hardhat-gas": "NOCOLOR=1 REPORT_GAS=true hardhat test test/hardhat/common/access/elevated-access.ts test/hardhat/common/token-prices.ts test/hardhat/common/repricing-token.ts test/hardhat/investments/origami-investment-vault.ts test/hardhat/investments/origami-investment.ts",
    "forge-gas": "NOCOLOR=1 forge test --offline --no-match-path \"test/foundry/invariant/**/*\" --no-match-test \"fuzz\" --gas-report --disable-block-gas-limit --offline > forge-gas-report.txt 2>&1",
    "forge-snapshot": "forge snapshot --offline --no-match-path \"test/foundry/invariant/**/*\" --no-match-test \"fuzz\"",
    "calc-gas": "python scripts/gas-report/total-avg-gas.py",
    "gas-avg": "yarn legacy-hardhat-gas && yarn forge-gas && yarn calc-gas"
  },
  "engines": {
    "node": "20.x"
  }
}
